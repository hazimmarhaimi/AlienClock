@model TimeViewModel

<div class="container p-5 border border-dark glassbg">

    <h1 class="d-flex justify-content-center">ALIEN CLOCK</h1>

    <!-- Displaying Earth Time -->
    <div class="row">
        <!-- Displaying Alien Time -->
        <div class="col-md-6">
            <h2>Alien Time</h2>
            <div id="alien-time-display">
            </div>
        </div>
        <div class="col-md-6">
            <h2>Earth Time</h2>
            <div id="earth-time-display" class="time-display">
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form id="setAlienTime" method="post" class="mt-4">
                <h3>Set Alien Time</h3>

                <div class="row-container">
                    <!-- Row 1: Year and Month -->
                    <div class="form-group">
                        <label for="alienYear">Year:</label>
                        <input type="number" id="alienYear" name="AlienYear" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="alienMonth">Month:</label>
                        <select id="alienMonth" name="AlienMonth" class="form-control" required>
                            <!-- Create options for 18 months -->
                        </select>
                    </div>
                </div>

                <div class="row-container">
                    <!-- Row 2: Day and Hour -->
                    <div class="form-group">
                        <label for="alienDay">Day:</label>
                        <select id="alienDay" name="AlienDay" class="form-control" required>
                            <!-- Day options will dynamically change based on the selected month -->
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="alienHour">Hour:</label>
                        <input type="number" id="alienHour" name="AlienHour" class="form-control" min="0" max="35" required />
                    </div>
                </div>

                <div class="row-container">
                    <!-- Row 3: Minute and Second -->
                    <div class="form-group">
                        <label for="alienMinute">Minute:</label>
                        <input type="number" id="alienMinute" name="AlienMinute" class="form-control" min="0" max="89" required />
                    </div>

                    <div class="form-group">
                        <label for="alienSecond">Second:</label>
                        <input type="number" id="alienSecond" name="AlienSecond" class="form-control" min="0" max="89" required />
                    </div>
                </div>

                <button type="submit" class="button-alien mt-3">Set Alien Time</button>
            </form>

        </div>



        <input type="hidden" id="newAlienTime" name="newAlienTime">
        <div class="col-md-6">
            <!-- Form to Set Alarm -->

            <h3 class="mt-4">Set Alarm for Alien Time</h3>
            <form id="alarm-form">
                <input type="time" name="alarmTime" id="alarmTime" class="form-control" required />
                <button type="submit" class="button-alien mt-2">Set Alarm</button>
            </form>
        </div>
    </div>
    <input type="hidden" id="alarms" name="alarms">

    <div class="row">
        <div class="col-md-6">
            <!-- Alarm Message -->
            <div id="alarm-message" class="mt-3" style="display:none;">
                <div class="alert alert-success">
                    <strong>Alarm!</strong> Your set alarm time has been reached!
                </div>
            </div>
        </div>
    </div>
    <audio id="alarm-sound" src="~/assets/audio/mixkit-digital-clock-digital-alarm.wav" preload="auto"></audio>
</div>

<script>
    
    var modelData = @Html.Raw(Json.Serialize(Model));

    console.log(modelData);
</script>
<script src="~/js/alienClock.js"></script>