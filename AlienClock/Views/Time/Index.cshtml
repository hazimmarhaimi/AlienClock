<div class="container p-5 border border-dark">
    <h1>Earth Time from Alien Time</h1>

    <!-- Displaying Alien Time -->
    <div class="row">
        <div class="col-md-6">
            <h2>Alien Time</h2>
            <p>Year: @Model.AlienTime.Year</p>
            <p>Month: @Model.AlienTime.Month</p>
            <p>Day: @Model.AlienTime.Day</p>
            <p>Hour: @Model.AlienTime.Hour</p>
            <p>Minute: @Model.AlienTime.Minute</p>
            <p>Second: @Model.AlienTime.Second</p>
        </div>

        <!-- Displaying Corresponding Earth Time -->
        <div class="col-md-6">
            <h2>Corresponding Earth Time</h2>
            <p>@Model.EarthTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
        </div>
    </div>

    <!-- Form to Set Alien Time -->
    <form asp-action="ConvertAlienToEarth" method="post" class="mt-4">
        <h3>Convert Alien Time to Earth Time</h3>
        <div class="row">
            <div class="col-md-2">
                <input type="number" name="Year" placeholder="Year" class="form-control" min="2804" required />
            </div>
            <div class="col-md-2">
                <input type="number" name="Month" placeholder="Month" class="form-control" min="1" max="18" required />
            </div>
            <div class="col-md-2">
                <input type="number" name="Day" placeholder="Day" class="form-control" min="1" max="48" required />
            </div>
            <div class="col-md-2">
                <input type="number" name="Hour" placeholder="Hour" class="form-control" min="0" max="35" required />
            </div>
            <div class="col-md-2">
                <input type="number" name="Minute" placeholder="Minute" class="form-control" min="0" max="89" required />
            </div>
            <div class="col-md-2">
                <input type="number" name="Second" placeholder="Second" class="form-control" min="0" max="89" required />
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Convert Time</button>
    </form>
</div>
